extends base

include _paginate

block content
  append block header 
    link(rel="stylesheet" type="/text/css" href="/assets/vendor/datatables/css/select.bootstrap4.css")
    link(rel="stylesheet" type="/text/css" href="/assets/vendor/datatables/css/fixedHeader.bootstrap4.css")
    link(rel="stylesheet" type="/text/css" href="/assets/vendor/datatables/css/dataTables.bootstrap4.css")
  // ==============================================================
  // wrapper
  // ==============================================================
  .dashboard-wrapper
    .container-fluid.dashboard-content
      // ==============================================================
      // pageheader
      // ==============================================================
      .row
        .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
          .page-header
            h2.pageheader-title TTShop - Quản lý người dùng
            p.pageheader-text
              | Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.
            .page-breadcrumb
              nav(aria-label='breadcrumb')
               
      // ==============================================================
      // end pageheader
      // ==============================================================
      .row
        // ==============================================================
        // form filter
        // ==============================================================
        .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12    
          .card
            .card-body
              form#form(data-parsley-validate='' novalidate='')
                .form-group.row
                  label.col-1.col-sm-1.col-form-label.text-right(for='infor') Tên/Email
                  .col-4.col-lg-5
                    input#infor.form-control(type='text' name='infor' required='true' placeholder='Tên, Email...')
                  label.col-5.col-sm-1.col-form-label.text-right(for='') Trạng thái
                  .col-6.col-lg-5
                    select#active.selectpicker(name='active' multiple)
                      option Active
                      option Deleted

                .row.pt-1.pt-sm-1.mt-1t
                  .col-sm-2.pl-0
                    p.text-right
                      button#searchSubmit.btn.btn-space.btn-primary(type='submit') Tìm kiếm
                      button#cancelBtn.btn.btn-space.btn-secondary(type='reset') Huỷ
            .card-body
              .table-responsive
                table.table.table-striped.table-bordered.first.dataTable
                  thead
                    tr
                      th ID
                      th Tên người dùng
                      th Email
                      th Điện thoại
                      th Vai trò
                      th Trạng thái
                      th Chỉnh sửa
                  tbody


  // ==============================================================
  // end main wrapper
